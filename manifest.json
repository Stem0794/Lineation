{
  "manifest_version": 3,
  "name": "Linear â†’ Notion Spec Porter",
  "version": "1.0.0",
  "description": "Export Linear issues to Notion specs with one click",
  "permissions": ["storage", "activeTab", "scripting", "notifications"],
  "host_permissions": [
    "*://*.linear.app/*",
    "https://api.notion.com/*",
    "https://libretranslate.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.linear.app/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "background": { "service_worker": "background.js" },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}